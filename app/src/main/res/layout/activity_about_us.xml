<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AboutUsActivity"
    >

    <!-- Заглавно изображение -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Тъмен overlay -->
    <View
        android:id="@+id/imageOverlay"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="#88000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Заглавие -->
    <TextView
        android:id="@+id/aboutUsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Запознайте се с нас"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/backgroundImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView със съдържание -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/backgroundImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="#FFFFFF">

            <!-- Секция: Представяне -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ние сме GlassesStore"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GlassesStore е създаден с идеята да комбинира мода, комфорт и достъпност. Ние вярваме, че очилата не са просто необходимост, а начин за изразяване на себе си."
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#555555" />

            <!-- Секция: Мисия -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Нашата мисия"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Да предоставим висококачествени и стилни очила на достъпна цена, без компромис с удобството и здравето на очите."
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#555555" />

            <!-- Секция: Екип -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Нашият екип"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Съставен от опитни специалисти в оптиката, модата и обслужването, нашият екип е тук, за да ви помогне да намерите най-доброто за вас."
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#555555" />

            <!-- Секция: Контакт -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Контакт"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📍 София, бул. България 100\n📞 +359 888 123 456\n📧 contact@glassesstore.bg"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="#555555" />

            <!-- Секция: Социални мрежи -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Последвайте ни"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/facebook"
                    android:contentDescription="Facebook" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/instagram"
                    android:contentDescription="Instagram" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/twitter"
                    android:contentDescription="Twitter" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
