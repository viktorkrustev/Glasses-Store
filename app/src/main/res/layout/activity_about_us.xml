<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AboutUsActivity">

    <!-- Background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_about_us"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <!-- Header -->
            <TextView
                android:id="@+id/aboutUsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:fontFamily="@font/rubik_glitch_regular"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Display -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/we_are"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/rubik_glitch_regular"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/idea"
                android:textSize="16sp"
                android:textColor="#CCCCCC"
                android:layout_marginBottom="16dp" />

            <!-- Mission -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mission"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/rubik_glitch_regular"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description1"
                android:textSize="16sp"
                android:textColor="#CCCCCC"
                android:layout_marginBottom="16dp" />

            <!-- Contact -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/rubik_glitch_regular"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address_hint"
                android:textSize="16sp"
                android:textColor="#CCCCCC" />

            <TextView
                android:id="@+id/phoneNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_num"
                android:textSize="16sp"
                android:textColor="#E4C89B"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <!-- Socials -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/follow_us"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/rubik_glitch_regular"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/facebook"
                    android:contentDescription="@string/facebook" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/instagram"
                    android:contentDescription="@string/instagram" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/twitter"
                    android:contentDescription="@string/twitter" />
            </LinearLayout>

            <!-- 🗺️ Карта -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/rubik_glitch_regular"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <org.osmdroid.views.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
