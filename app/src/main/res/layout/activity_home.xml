<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_gradient"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <!--  Blur overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <!-- Heading NOIR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="#000000"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:fontFamily="@font/rubik_glitch_regular" />
            </LinearLayout>

            <!-- login -->
            <Button
                android:id="@+id/btnLogin"
                style="@style/MonoButton.Beautiful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:backgroundTint="#EF990D"
                android:layout_marginBottom="12dp" />

            <!-- registration -->
            <Button
                android:id="@+id/btnRegister"
                style="@style/MonoButton.Beautiful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:backgroundTint="#EF990D"
                android:layout_marginBottom="24dp" />

            <!-- products -->
            <Button
                android:id="@+id/btnProducts"
                style="@style/MonoButton.Beautiful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/products"
                android:layout_marginBottom="12dp" />

            <!-- profile -->
            <Button
                android:id="@+id/btnProfile"
                style="@style/MonoButton.Beautiful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:layout_marginBottom="12dp" />

            <!-- about us -->
            <Button
                android:id="@+id/btnAbout"
                style="@style/MonoButton.Beautiful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_us"
                android:layout_marginBottom="24dp" />

            <!-- welcome -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginBottom="24dp" />

            <!-- main img -->
            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/img11"
                android:scaleType="centerCrop"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_corners" />

            <!-- promo text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/promo_text"
                android:textSize="16sp"
                android:textColor="#CCCCCC"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- img 2 -->
            <ImageView
                android:id="@+id/bottomImage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/img111"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_corners" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
